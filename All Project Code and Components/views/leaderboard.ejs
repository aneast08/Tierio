<div class="card card-image bg-custom-1" style="width: 30rem; margin-left: 10rem; margin-bottom: 2rem;">
    <div class="text-white rgba-stylish-strong">
<form class="form" action="/leaderboard" method="get">
<form class="form" action="/search" method="get">
            <div class="card-body">
            <div class="form-group">
		    <label for="category_input">Leaderboard Category:</label>
		    <select class="form-control" name="category_input">
		      <option>Category</option>
			<option>Disney</option>         
			<option>Food</option>      
			<option>Gaming</option>
			<option>Movies</option>
			<option>Shows</option>        
			<option>Sports</option>
			<option>Youtube</option> 
			<option>Misc</option>
		    </select>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
</div>

<div class="card mb-3" style="max-width: 70rem; background-color: white; margin-left: 10rem;">
    <div id="search_items" class="card-body">
                 <% for (var i = 0; i < data.length; i++) { %>
                    <div class="card text-white bg-info mb-3" style="width: 15rem; display:inline-block; margin-left: 1rem;">
                        <div class="card-header"> <%=data[i].creator_name%></div>
                        <div class="card-body">
                            <h5 class="card-title"> <%=data[i].tierlist_name%> </h5>
                            <p class="card-text"> <%=data[i].category%> </p>
			    <p class="card-text"> Votes: <%=data[i].votes%> </p>                       
			</div>
                    </div>
                 <% } %>
        </form>
        <form class="form" action="/view" method="get">
        <select class="custom-select" name="id_val" onchange="this.form.submit()">
                 <option selected>Select Tier to View</option>
                 <% for (var i = 0; i < data.length; i++) { %>
                 	<option name="id_selection" value="<%=data[i].tierlistid%>"><%=data[i].tierlist_name%>, <%=data[i].creator_name%></option>
                 <% } %>
                 </select>
         </form>
    </div>
</div>
</form>

